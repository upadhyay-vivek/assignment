@model IEnumerable<Assignment.WebApp.DTOs.ParcelOutputDto>
@{
    ViewBag.Title = "ParcelStatus";
}

@if (Model != null)
{
    if(Model.Count() > 0)
    {
        <table class="table" style="margin-top: 30px">
            <thead style="background-color: rgb(33, 49, 77);color:white">
                <tr>
                    <th scope="col">Sender Name</th>
                    <th scope="col">Sender Address</th>
                    <th scope="col">Reciepient Name</th>
                    <th scope="col">Reciepient Address</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Value</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row">
                        <td>@item.Sender.Name</td>
                        <td>
                            @item.Sender.Address.HouseNumber
                        <span>,</span>@item.Sender.Address.Street
                        <span>,</span>@item.Sender.Address.PostalCode
                        <span>,</span>@item.Sender.Address.City
                    </td>
                    <td>@item.Receipient.Name</td>
                    <td>
                        @item.Receipient.Address.HouseNumber
                        <span>,</span>@item.Receipient.Address.Street
                        <span>,</span>@item.Receipient.Address.PostalCode
                        <span>,</span>@item.Receipient.Address.City
                    </td>
                    <td>@item.Weight</td>
                    <td>@item.Value</td>
                    <td>Managed by <b>@item.DepartmentName</b></td>
                </tr>
            }
            </tbody>

        </table>
    }
}


